<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/imagen_contacto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="Imagen del contacto"
        android:src="@drawable/icono_contactos_350"
        android:layout_marginRight="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/nombre_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Contacto"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/numero_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃºmero del Contacto"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
