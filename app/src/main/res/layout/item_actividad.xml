<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_marginBottom="16dp"
    >

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_actividad"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:text="Tienes [actividad]\n el [dÃ­a] de [mes]\n a las [hora]hrs."
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_asistir_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistir"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagen_actividad"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="Estado del evento"
        android:src="@drawable/icono_ajuste_350"></ImageView>
</LinearLayout>
