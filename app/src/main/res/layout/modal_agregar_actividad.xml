<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_agregar"
        android:hint="Nombre de la actividad"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#808080"
        android:layout_marginBottom="16dp"/>



    <EditText
        android:id="@+id/input_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_agregar"
        android:hint="Fecha"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#808080"
        android:layout_marginBottom="16dp"/>



    <EditText
        android:id="@+id/input_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_agregar"
        android:hint="Hora"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#808080"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Foto:"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_agregar_foto_actividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Seleccionar Foto"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:padding="12dp"
        android:textSize="16sp"
        android:onClick="seleccionarFoto" />

    <ImageView
        android:id="@+id/imagen_seleccionada"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:visibility="gone" />


    <Button
        android:id="@+id/btn_agregar_actividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Agregar Actividad"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:padding="12dp"
        android:textSize="16sp"
        android:onClick="agregarActividad" />

</LinearLayout>
